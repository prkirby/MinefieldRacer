package GameMechanics;

import static org.junit.Assert.*;

import java.io.File;

import org.junit.Test;

public class MineCreationTest {


	/**
	 * createMineLayerTest
	 * 
	 * Tests a number of things in createMineLayer method.
	 * 
	 */
	@Test
	public void createMineLayerTest() {
		MineCreation mines = new MineCreation();
		Map newMap = new Map(new File("MAPS/test1.txt"));
		double minePercent;

		// Quick check first. Not currently working either.
		minePercent = 2;
		if (mines.createMineLayer(newMap.getMap(), minePercent) != null) {
			fail("Not yet implemented");
		}
		
		minePercent = 0.5;
		newMap = mines.createMineLayer(newMap.getMap(), minePercent);
		int mineCount = 0;
		for (int i = 0; i < newMap.getMap().length; i++) {
			for (int j = 0; j < newMap.getMap()[0].length; j++) {
				if (newMap.getMap()[i][j] == "-1") {
					mineCount++;
				}
			}
		}
		
		if (mineCount <= 0) {
			fail("Mines are not being created accurately with a mine percentage of 0.5.");
		}
	}

}
